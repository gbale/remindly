<div class="container mt-5">
  <h3 class="text-center">Login</h3>
  <form action="/login" method="post">
    <div class="border p-3 my-3">
      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
          placeholder="Enter email" autocomplete="email" required autofocus>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password"
          autocomplete="current-password">
      </div>
      <div><button type="submit" class="btn btn-primary">Log In</button></div>
    </div>
    <div class="border p-3 my-3">
      <p>Or log in using a partner account</p>
      <a class="btn btn-secondary" href="/login/github">Login with GitHub</a>
    </div>
  </form>
</div>